{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block monTitre %}
Inscription
{% endblock %}

{% block body %}
{{ form_start(form) }}
    <div class="form_produit">
        <div>{{form_row(form.username,{
            'attr' : {"placeholder":"Saisir votre login"},
            'label' : 'Votre login'
        })}}</div>
        <div>{{form_row(form.email,{
            'attr' : {"placeholder":"Saisir votre email"},
            'label' : 'Votre email'
        })}}</div>
        <div>{{form_row(form.password,{
            'attr' : {'placeholder':'Saisir votre mot de passe'}
        })}}</div>
        <div>{{form_row(form.verifyPassword,{
            'attr' : {'placeholder':'Confirmez votre mot de passe'},
            'label' : 'Confirmez Password'
        })}}</div>
        <input type="submit" class="btn btn-primary" value="S'inscrire" style="width:100%">
    </div>
{{ form_end(form) }}
{% endblock %}
