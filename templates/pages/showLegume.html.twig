{% extends 'base.html.twig' %}

{% block monTitre %}
  Légume {{ legume.name }}
{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-2">
      <img src="{{asset('pictures/legumes/' ~ legume.name ~ 's.jpg') }}">
    </div>
    <div class="col">
      <h2>{{ legume.name }}</h2>
      <div>
        {% if legume.origin != null %}
          {{ legume.origin }}
        {% else %}
          Inconnue pour cet aliment
        {% endif %}
      </div>
      <h3>Les caractéristiques</h3>
      <ul>
        <li>Poid : {{ legume.skill.weight }}</li>
        <li>Valeur nutritive : {{ legume.skill.nutritivValue }}</li>
        <li>Couleur : {{ legume.skill.color }}</li>
      </ul>
    </div>
  </div>
{% endblock %}
