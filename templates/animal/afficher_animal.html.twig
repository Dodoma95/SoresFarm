{% extends 'base.html.twig' %}

{% block title %}L'animal{% endblock %}

{% block monTitre %}L'animal {{ animal.name }}{% endblock %}

{% block body %}
  <div>{{ animal.description }}</div>
  <div class="row">
  {% for viande in animal.parties %}
    <div class="col-6">
      <div class="row align-items-center">
        <div class="col-8 col-md-6 col-lg-2 text-center">
          <img src="{{asset('pictures/viandes/' ~ viande.image) }}" class="img-fluid">
        </div>
        <div class="col text-center">
          <h2><a href="{{ path('afficher_viande', {'id' : viande.id}) }}">{{ viande.name }} // {{ viande.animal }}</a></h2>
        </div>
        <div>{{ viande.description }}</div>
        <div><a href="" class="btn btn-primary">{{ viande.typeanimal.name }}</a></div>
        <div>
          {% for region in viande.regions %}
            <a href="{{ path('afficher_region', {'id' : region.id}) }}" class="btn btn-warning">{{region.name}}</a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
{% endblock %}
