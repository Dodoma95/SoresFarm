{% extends 'base.html.twig' %}

{% block title %}Régions{% endblock %}

{% block monTitre %}Région : {{region.name}}{% endblock %}

{% block body %}
    <h2 class="border-bottom border-primary">{{region.name}}</h2>
    <div class="row">
        {% for viande in region.viandes %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-8 col-md-6 col-lg-2 text-center">
                        <img src="{{asset('pictures/viandes/' ~ viande.image) }}" class="img-fluid">
                    </div>
                    <div class="col text-center">
                        <h2><a href="{{ path('afficher_viande', {'id' : viande.id}) }}">{{ viande.name }} // {{ viande.animal }}</a></h2>
                        <div>{{ viande.description }}</div>
                        <div><a href="{{path('afficher_animal', {'id':viande.typeanimal.id})}}" class="btn btn-primary">{{ viande.typeanimal.name }}</a></div>
                        <div>
                            {% for regionViande in viande.regions %}
                                {% if regionViande.id != region.id %}
                                    <a href="{{ path('afficher_region', {'id' : regionViande.id}) }}" class="btn btn-warning">{{regionViande.name}}</a>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
