{% extends 'base.html.twig' %}

{% block title %}Hello FarmerController!{% endblock %}

{% block monTitre %}{{farmer.name}}{% endblock %}

{% block body %}
<h3>Liste des viandes propos√©es : </h3>
{% for dispose in farmer.disposes %}
    <div class="row align-items-center">
        <div class="col-2">
            <img src="{{asset('pictures/viandes/' ~ dispose.viande.image)}}">
        </div>
        <div class="col">
            <h2><a href="{{path('afficher_viande', {'id' : dispose.viande.id})}}">{{dispose.viande.name}}</a></h2>
            <div>Nombre : {{dispose.number}}</div>
        </div>
    </div>
{% endfor %}

{% endblock %}
